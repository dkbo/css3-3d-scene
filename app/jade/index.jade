    meta(property="og:image" content="http://i0.wp.com/dkbo.tw/wp-content/uploads/2015/08/rpg.jpg")
    meta(property="og:locale" content="zh_TW")
    meta(property="og:type" content="website")
  body 
    #scene
      #camera.assembly.pos
        #fps.assembly.pos.pos
          #plane.assembly.pos
            +cubeGroup(
              'stone', 
              'stone1', 
              'stone2', 
              'stone3', 
