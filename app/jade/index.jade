mixin cubeGroup(...cubes)
  each x in cubes
    .cube.assembly(id=x)
      +cube()
mixin cube()
  - var x = 5
  while x--
    .face

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    link(rel='stylesheet', type='text/css', href='css/custom.css', media='screen')
    title DKBO's Css3 3D Scene
    meta(name='author', content='DKBO')
    meta(name='description', content='儘管瀏覽器支援度及效能的問題，還是練習利用 CSS3 製作 3D 場景。因妥善使用 3D 特效可以大增 UX')
    META(name="KeyWords" content="CSS3 ")
    meta(name='viewport', content='width=device-width,initial-scale=1,user-scalable=0')
    meta(property="og:title" content="DKBO's Css3 3D Scene")
    meta(property="og:description" content="儘管瀏覽器支援度及效能的問題，還是練習利用 CSS3 製作 3D 場景。因妥善使用 3D 特效可以大增 UX")
